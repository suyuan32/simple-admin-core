# Dockerfile for Frontend in Monorepo
# Build from project root: docker build -f Dockerfile.web -t backend-ui .

# Stage 1: Build the application
FROM node:20-alpine AS builder

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm@10.17.1

# Copy package files
COPY web/package.json web/pnpm-lock.yaml web/pnpm-workspace.yaml ./
COPY web/apps ./apps
COPY web/packages ./packages
COPY web/internal ./internal

# Install dependencies
RUN pnpm install --frozen-lockfile

# Build the application
RUN pnpm build:simple-admin-core

# Stage 2: Nginx runtime
FROM nginx:1.29-alpine

# Copy built files from builder stage
COPY --from=builder /app/apps/simple-admin-core/dist/ /usr/share/nginx/html/

# Copy nginx configuration
COPY web/scripts/deploy/nginx.conf /etc/nginx/nginx.conf

LABEL MAINTAINER="yuansu.china.work@gmail.com"

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
